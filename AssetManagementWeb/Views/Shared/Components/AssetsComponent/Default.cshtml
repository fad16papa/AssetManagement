@model IEnumerable<AssetsDTO>


<div class="col-lg-4 col-md-6 col-sm-6">
    <div class="card card-stats">
        <div class="card-body ">
            <div class="row">
                <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                        <i class="nc-icon nc-laptop text-warning"></i>
                    </div>
                </div>
                <div class="col-7 col-md-8">
                    <div class="numbers">
                        <p class="card-category">Total Count: @ViewBag.TotalAssetsCount</p>
                        <p class="card-title">Assets
                        <p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer ">
            <hr>
            <div class="stats">
                <a asp-controller="Assets" asp-action="Index">
                    <i class="fa fa-refresh"></i>
                    Check Assets
                </a>
            </div>
        </div>
    </div>
</div>