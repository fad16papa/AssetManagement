@model AssetManagementWeb.Models.DTO.AssetsDTO

@{
    ViewData["Title"] = "Create Assets Page";
    Layout = "_Layout";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title">Create Asset</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="HostName">HostName</label>
                                    <input asp-for="HostName" class="form-control" autocomplete="off"
                                           placeholder="HostName">
                                    <div><span asp-validation-for="HostName" class="text-danger"></span></div>
                                </div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="SerialNo">SerialNo</label>
                                    <input asp-for="SerialNo" class="form-control" autocomplete="off"
                                           placeholder="SerialNo">
                                    <div><span asp-validation-for="SerialNo" class="text-danger"></span></div>
                                </div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="ExpressCode">ExpressCode</label>
                                    <input asp-for="ExpressCode" class="form-control" autocomplete="off"
                                           placeholder="ExpressCode">
                                    <div><span asp-validation-for="ExpressCode" class="text-danger"></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="Brand">Brand</label>
                                    <input asp-for="Brand" class="form-control" autocomplete="off"
                                           placeholder="Brand">
                                    <div><span asp-validation-for="Brand" class="text-danger"></span></div>
                                </div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="Model">Model</label>
                                    <input asp-for="Model" class="form-control" autocomplete="off"
                                           placeholder="Model">
                                    <div><span asp-validation-for="Model" class="text-danger"></span></div>
                                </div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="Type">Type</label>
                                    <select asp-for="Type" class="form-control"
                                            asp-items="Html.GetEnumSelectList<AssetManagementWeb.Models.TypeModel>()"
                                            required>
                                        <option value="">Select Type</option>
                                    </select>
                                    <div><span asp-validation-for="Type" class="text-danger"></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="Status">Status</label>
                                    <select asp-for="Status" class="form-control"
                                            asp-items="Html.GetEnumSelectList<AssetManagementWeb.Models.StatusModel>()"
                                            required>
                                        <option value="">Select Status</option>
                                    </select>
                                    <div><span asp-validation-for="Status" class="text-danger"></span></div>
                                </div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="Location">Location</label>
                                    <select asp-for="Location" class="form-control"
                                            asp-items="Html.GetEnumSelectList<AssetManagementWeb.Models.LocationModel>()"
                                            required>
                                        <option value="">Select Location</option>
                                    </select>
                                </div>
                                <div><span asp-validation-for="Location" class="text-danger"></span></div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label asp-for="IsAvailable">IsAvailable</label>
                                    <select asp-for="IsAvailable" class="form-control"
                                            asp-items="Html.GetEnumSelectList<AssetManagementWeb.Models.AvailabilityModel>()"
                                            required>
                                        <option value="">Select Location</option>
                                    </select>
                                </div>
                                <div><span asp-validation-for="IsAvailable" class="text-danger"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="@Model.Remarks"></label>
                                    <textarea class="form-control textarea"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="update ml-auto mr-auto p-2">
                                <button type="submit" class="btn bt n-primary btn-round">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>