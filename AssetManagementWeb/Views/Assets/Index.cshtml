@model IEnumerable<AssetManagementWeb.Models.DTO.AssetsDTO>

@{
    ViewData["Title"] = "Assets Page";
    Layout = "_Layout";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header form-inline">
                    <a type="button" class="btn btn-secondary" href="#" onclick="CreateAssetModal()">
                        <i class="nc-icon nc-simple-add"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @{
                            var counterUser = 1;
                        }
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        S/N
                                    </th>
                                    <th>
                                        HostName
                                    </th>
                                    <th>
                                        SerialNo.
                                    </th>
                                    <th>
                                        ExpressCode
                                    </th>
                                    <th>
                                        Brand
                                    </th>
                                    <th>
                                        Model
                                    </th>
                                    <th>
                                        Type
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                        Availability
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @counterUser
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.HostName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SerialNo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ExpressCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                                        <td>
                                            <div class="btn-group">
                                                <button class="btn btn-secondary btn-sm dropdown-t" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    . . .
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="#" onclick="UpdateAssetModal()">View</a>
                                                    <a class="dropdown-item" href="#">Update</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    counterUser++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@* Placeholder for the Modal View *@
<div id="ModalPlaceholder"></div>

<!-- Modal for Errors-->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="ErrorModal" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-danger" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <label class="modal-title h6" id="errorHeaderLabel" />
            </div>

            <div class="modal-body">
                <label id="errorBodyLabel" />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">OK</button>
            </div>

        </div>
    </div>
</div>

<!-- Modal for Success-->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="SuccessModal" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-success" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <label class="modal-title h6" id="successHeaderLabel" />
            </div>

            <div class="modal-body">
                <label id="successBodyLabel" />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
            </div>

        </div>
    </div>
</div>
