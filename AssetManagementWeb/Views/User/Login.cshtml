@model AssetManagementWeb.Models.DTO.LoginDTO

@{
    Layout = "_LoginLayout";
}

<div class="navbar-container pt-5">
</div>
<div class="main-container">
    <section class="space-sm">
        <div class="container align-self-start">
            <div class="row mb-5">
                <div class="col text-center">
                    <a href="#">
                        <img alt="Image" src="~/loginAssets/assets/img/IPSSecurex.png" />
                    </a>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-7">
                    <div class="card card-lg text-center">
                        <div class="card-body">
                            <div class="mb-5">
                                <h1 class="h2 mb-2">Hello!</h1>
                                <span>Sign in to your account to continue</span>
                            </div>
                            <div class="row no-gutters justify-content-center">
                                <form class="text-left col-lg-8" method="post">
                                    <div class="form-group">
                                        <div><span asp-validation-for="Email" class="text-danger"></span></div>
                                        <label asp-for="Email">Email Address</label>
                                        <input class="form-control form-control-lg" type="email" name="email" asp-for="Email"
                                               id="login-email" placeholder="Email Address" />
                                    </div>
                                    <div class="form-group">
                                        <div><span asp-validation-for="Password" class="text-danger"></span></div>
                                        <label asp-for="Password">Password</label>
                                        <input class="form-control form-control-lg" type="password" name="password" asp-for="Password"
                                               id="login-password" placeholder="Enter a password" />
                                    </div>
                                    <div class="text-center mt-3">
                                        <button type="submit" class="btn btn-lg btn-primary">Log in</button>
                                    </div>
                                </form>
                            </div>
                            <!--end of row-->
                        </div>
                    </div>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
</div>