@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="content">
    <div class="row">
        @await Component.InvokeAsync("AssetsComponent")
        @await Component.InvokeAsync("LicenseComponent")
        @await Component.InvokeAsync("UserStaffsComponents")
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header ">
                    <h5 class="card-title">Users Behavior</h5>
                    <p class="card-category">24 Hours performance</p>
                </div>
                <div class="card-body ">
                    <canvas id=chartHours width="400" height="100"></canvas>
                </div>
                <div class="card-footer ">
                    <hr>
                    <div class="stats">
                        <i class="fa fa-history"></i> Updated 3 minutes ago
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @await Component.InvokeAsync("UserAssetsComponents")
        @await Component.InvokeAsync("UserLicenseComponents")
    </div>
</div>
