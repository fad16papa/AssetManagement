@model AssetManagementWeb.Models.ViewModel.LicenseUserViewModel

@{
    Layout = null;
}

<div class="modal fade" id="AssignLicenseUser" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog"
    aria-hidden="true">
    <div class="modal-dialog modal-primary modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign License To User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-user">
                                <div class="card-header">
                                    <h5 class="card-title">Select a UserStaff</h5>
                                </div>
                                <div class="card-body">
                                    <form method="post" id="formAssignLicenseUser">
                                        <input name="IsValid" type="hidden"
                                            value="@ViewData.ModelState.IsValid.ToString()" />
                                        <span>@ViewBag.ErrorResponse</span>
                                        <div class="row">
                                            <div class="form-group">
                                                <label asp-for="LicenseId" class="control-label" hidden></label>
                                                <input asp-for="LicenseId" class="form-control" hidden
                                                    value="@ViewBag.LicenseId" />
                                            </div>
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="LicenseDTO.ProductName">HostName</label>
                                                    <input asp-for="LicenseDTO.ProductName" class="form-control"
                                                        disabled>
                                                </div>
                                            </div>
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="LicenseDTO.ProductVersion">SerialNo</label>
                                                    <input asp-for="LicenseDTO.ProductVersion" class="form-control"
                                                        disabled>
                                                </div>
                                            </div>
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="LicenseDTO.Expiration">ExpressCode</label>
                                                    <input asp-for="LicenseDTO.Expiration" class="form-control"
                                                        disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="LicenseDTO.ExpiredOn">Brand</label>
                                                    <input asp-for="LicenseDTO.ExpiredOn" class="form-control" disabled>
                                                </div>
                                            </div>
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="LicenseDTO.IsAvailable">Model</label>
                                                    <input asp-for="LicenseDTO.IsAvailable" class="form-control"
                                                        disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="UserStaffId">Select UserStaff</label>
                                                    <select asp-for="UserStaffId" class="form-control"
                                                        asp-items="@(new SelectList(Model.UserStaffDTOs, "Id", "DisplayName"))"
                                                        required>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="IssuedOn">Issued On</label>
                                                    <input asp-for="IssuedOn" class="form-control" type="date" required
                                                        value="@ViewBag.Date">
                                                </div>
                                            </div>
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label asp-for="ReturedOn">Retured On</label>
                                                    <input asp-for="ReturedOn" class="form-control" type="date">
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <div class="row">
                                        <div class="update ml-auto mr-auto p-2">
                                            <button type="button" class="btn btn-info btn-fill btn-wd"
                                                onclick="AssignLicenseUser()">
                                                Assign
                                            </button>
                                        </div>
                                        <div class="update ml-auto mr-auto p-2">
                                            <button type="button" class="btn btn-danger btn-fill btn-wd"
                                                data-dismiss="modal">
                                                Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>